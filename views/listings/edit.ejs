<% layout('/layouts/boilerplate') %>

<div class="edit-listing-container">
  <div class="edit-listing-card">
    <h3>Edit Your Listing</h3>

    <form
      method="POST"
      action="/listings/<%= listing._id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          id="title"
          name="listing[title]"
          value="<%= listing.title %>"
          type="text"
          class="form-control"
          required
        />
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          id="description"
          name="listing[description]"
          class="form-control"
          rows="4"
          required
        >
<%= listing.description %></textarea
        >
      </div>

      <!-- Category -->
      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select
          name="listing[category]"
          id="category"
          class="form-select"
          
        >
          <option value="">Choose category...</option>
          <option value="trending" <%= listing.category === 'trending' ? 'selected' : '' %>>Trending</option>
          <option value="rooms" <%= listing.category === 'rooms' ? 'selected' : '' %>>Rooms</option>
          <option value="iconic cities" <%= listing.category === 'iconic cities' ? 'selected' : '' %>>Iconic Cities</option>
          <option value="mountain" <%= listing.category === 'mountain' ? 'selected' : '' %>>Mountain</option>
          <option value="castles" <%= listing.category === 'castles' ? 'selected' : '' %>>Castles</option>
          <option value="arctic" <%= listing.category === 'arctic' ? 'selected' : '' %>>Arctic</option>
          <option value="camping" <%= listing.category === 'camping' ? 'selected' : '' %>>Camping</option>
          <option value="farms" <%= listing.category === 'farms' ? 'selected' : '' %>>Farms</option>
          <option value="doms" <%= listing.category === 'doms' ? 'selected' : '' %>>Doms</option>
          <option value="boat" <%= listing.category === 'boat' ? 'selected' : '' %>>Boat</option>
          <option value="deserts" <%= listing.category === 'deserts' ? 'selected' : '' %>>Deserts</option>
        </select>
      </div>


      <!-- Original Image -->
      <div class="mb-3 text-center">
        <p class="text-muted mb-2">Current Image Preview</p>
        <img
          src="<%= originalImageUrl %>"
          alt="Listing Preview"
          class="listing-image"
          style="max-width: 300px; height: 200px"
        />
      </div>

      <!-- Upload New Image -->
      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input
          name="listing[image]"
          id="image"
          type="file"
          class="form-control"
          accept="image/*"
                />
        <div class="invalid-feedback" id="fileSizeError" style="display: none">
          File size must be less than 2MB
        </div>
      </div>

      <!-- Price -->
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input
          id="price"
          name="listing[price]"
          value="<%= listing.price %>"
          type="number"
          min="0"
          class="form-control"
          required
        />
      </div>

      <!-- Country -->
      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          id="country"
          name="listing[country]"
          value="<%= listing.country %>"
          type="text"
          class="form-control"
          required
        />
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          id="location"
          name="listing[location]"
          value="<%= listing.location %>"
          type="text"
          class="form-control"
          required
        />
      </div>

      <!-- Submit -->
      <button class="btn update-btn mt-3">Update Listing</button>
    </form>
  </div>
</div>
