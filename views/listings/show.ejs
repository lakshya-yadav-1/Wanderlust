<% layout('/layouts/boilerplate') -%>

<style>
  .card-body {
    padding: 1.8rem;
  }
  .card-body p {
    margin-bottom: 0.6rem;
    color: #4b5563;
    font-size: 1rem;
  }
  .card-body i {
    color: #6b7280;
  }
</style>

<div class="container show-container">
  <div class="listing-header">
    <h3><%= listing.title %></h3>
  </div>

  <!--Listing Card -->
  <div class="card listing-card mx-auto col-lg-6 col-md-8 col-sm-10">
     <img src="<%= listing.image?.url || 'default-image-url' %>" alt="listing_image" 
      class="card-img-top show-img"
      alt="listing_image"
    />
    <div class="card-body">
      <p><i>Owned by <%= listing.owner.username %></i></p>
      <p><%= listing?.description || "No description" %></p>
      <p><b>â‚¹ <%= listing?.price ? listing.price.toLocaleString('en-IN') : "N/A" %></b></p>
      <p><%= listing?.location || "No location" %></p>
      <p><%= listing?.country || "No country" %></p>
    </div>
  </div>

  <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
  <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn">Edit</a>
    <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
      <button class="btn btn-dark">Delete</button>
    </form>
  </div>
  <% } %>

  <!--  Review Section -->
  <div class="col-lg-8 col-md-10 mx-auto review-section">
    <% if (currUser) { %>
    <h4>Leave a Review</h4>
    <form
      action="/listings/<%= listing._id %>/reviews"
      method="post"
      novalidate
      class="needs-validation mt-3"
    >
      <label for="rating" class="form-label fw-semibold">Rating</label>
      <fieldset class="starability-slot mb-3" >
        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked />
        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
        <label for="first-rate1">1 star</label>
        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
        <label for="first-rate2">2 stars</label>
        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
        <label for="first-rate3">3 stars</label>
        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
        <label for="first-rate4">4 stars</label>
        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
        <label for="first-rate5">5 stars</label>
      </fieldset>

      <div class="mb-3">
        <label for="comment" class="form-label fw-semibold">Comments</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="30"
          rows="5"
          class="form-control"
          placeholder="Share your experience..."
          required
        ></textarea>
      </div>

      <button class="btn edit-btn">Submit</button>
    </form>
    <hr />
    <% } %>

    <p class="fw-bold mt-4 mb-3 fs-5">All Reviews</p>

    <div class="row">
      <% for (let review of listing.reviews) { %>
      <div class="card col-lg-5 col-md-5 col-sm-10 mx-auto mb-3 review-card">
        <div class="card-body">
          <h5 class="card-title">@ <%= review.author.username %></h5>
          <p class="card-text"><%= review.comment %></p>
          <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
        </div>

         <% if (currUser) { %>
        <form
          action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
          method="post"
          class="mb-3 text-center"
        >
          <button class="btn btn-sm edit-btn">Delete</button>
        </form> <% } %>
      </div>
      <% } %>
    </div>
  </div>
</div>
